        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/api/likes", "host": ["{{baseUrl}}"], "path": ["api", "likes"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"A1236456789\",\n  \"productNo\": 1,\n  \"account\": \"1111999666\",\n  \"orderName\": 2\n}"
        }
      }
    },
    {
      "name": "2) 查清單 GET /api/likes/user/{userId}",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/api/likes/user/A1236456789", "host": ["{{baseUrl}}"], "path": ["api", "likes", "user", "A1236456789"] }
      }
    },
    {
      "name": "3) 更新 PUT /api/likes/{sn}",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "{{baseUrl}}/api/likes/1", "host": ["{{baseUrl}}"], "path": ["api", "likes", "1"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"account\": \"1111999666\",\n  \"orderName\": 3\n}"
        }
      }
    },
    {
      "name": "4) 刪除 DELETE /api/likes/{sn}",
      "request": {
        "method": "DELETE",
        "url": { "raw": "{{baseUrl}}/api/likes/1", "host": ["{{baseUrl}}"], "path": ["api", "likes", "1"] }
      }
    }
  ],
